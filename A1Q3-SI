import java.util.Scanner;
public class a1q1 {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);

        int p = in.nextInt();
        int t = in.nextInt();
        int r = in.nextInt();


        System.out.println("Simple Interest: " + (p*t*r)/10);
        }

    }

